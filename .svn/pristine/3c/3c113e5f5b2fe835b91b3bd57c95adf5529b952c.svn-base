  if(obj.code != "000000") {
		obj.code = "222222"
	} else if(obj.code == "000000") {
		var userInfo = Base.getSessionData(ctx.session, "sessionConstant_userInfo") || {};
		obj = await queryUserInfo(ctx, userInfo.user.userId)
	}
  Base.getResponseRes(ctx, obj);
}
